{% extends 'base.html.twig' %}

{% block body %}
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-3">Update Game</h1>
        </div>
    </div>
    <div class="container">
        {{ form_start(form) }}
        <div class="form-row">
            <div class="col-3">
                {{ form_label(form.goalHome) }}
                {{ form_widget(form.goalHome, {'attr': {'class': 'form-control'}}) }}
            </div>
            <span class="col-1"><b>:</b></span>
            <div class="col-3">
                {{ form_label(form.goalAway) }}
                {{ form_widget(form.goalAway, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="form-row">
        <div class="col-7">
            {{ form_widget(form.generate, {'attr': {'class': 'btn btn-primary'}}) }}
        </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}