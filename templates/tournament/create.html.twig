{% extends 'base.html.twig' %}

{% block body %}
<div class="jumbotron jumbotron-fluid">
    <div class="container">
        <h1 class="display-3">{% trans from "messages" %}Create Tournament{% endtrans %}</h1>
    </div>
</div>
<div class="container">
    {{ form_start(form) }}
    <div class="form-row">
        <div class="col-6">
            {{ form_label(form.name) }}
            {{ form_widget(form.name,  {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-6">
            {{ form_label(form.place) }}
            {{ form_widget(form.place,  {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-6">
            {{ form_label(form.type) }}
            {{ form_widget(form.type,  {'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
    <div class="form-row">
        <div class="col-6">
            {{ form_label(form.date) }}
            {{ form_widget(form.date) }}
        </div>
    </div>
    <br />
    <div class="form-row">
        <div class="col-6">
            {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
        </divY
    </div>
    {{ form_end(form) }}
</div>
{% endblock %}